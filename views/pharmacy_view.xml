<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Tree View -->
    <record id="view_pharmacy_tree" model="ir.ui.view">
        <field name="name">pharmacy.pharmacy.tree</field>
        <field name="model">pharmacy.pharmacy</field>
        <field name="arch" type="xml">
            <list string="Pharmacy List">
                <field name="order_number"/>
                <field name="partner_id"/>
                <field name="phone_id"/>
                <field name="city_id"/>
                <field name="is_active"/>
                <field name="age"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_pharmacy_form" model="ir.ui.view">
        <field name="name">pharmacy.pharmacy.form</field>
        <field name="model">pharmacy.pharmacy</field>
        <field name="arch" type="xml">
            <form string="Pharmacy Form">
                <header>
                    <button name="action_confirm" string="Confirm" class="oe_highlight" type="object"/>
                    <button name="action_canceled" string="Canceled" class="oe_highlight"  type="object"/>
                    <field name="state" widget="statusbar" statusbar_visible="" statusbar_colors="{'draft':'blue','done':'green'}"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="order_number"/>
                        </h1>
                    </div>
                    <group string="General Information" >
                        <field name="partner_id"/>
                        <field name="date_of_birth"/>
                        <field name="age"/>
                    </group>
                    <group string="Contact Details">
                        <group>
                            <field name="email_id"/>
                            <field name="phone_id"/>
                        </group>

                    </group>
                    <group string="Address">
                         <field name="country_id" options="{'no_open': True, 'no_create': True}"/>
                         <field name="city_id"/>
                        <field name="street_id"/>

                    </group>

                    <group string="Image">
                        <field name="capture_image" widget="image"/>
                    </group>
                    <group>
                        <field name="is_active" invisible="1"/>
                    </group>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_pharmacy_management" model="ir.actions.act_window">
        <field name="name">Pharmacy</field>
        <field name="res_model">pharmacy.pharmacy</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first pharmacy record here!
            </p>
        </field>
    </record>

</odoo>
